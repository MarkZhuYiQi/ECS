                    $parentNode=array("id"=>$r['id'],"text"=>$r['tree_text'],"state"=>$r['tree_state']);
                    $get_children=$this->getTree_child($r['id'],$ret2,$parentNode);      //在这里把ret循环完了，指针到头了
                    if(count($get_children)>0){
                        $parentNode["children"]=$get_children;
                    }
                    $treeList[]=$parentNode;
                }else{

                }
            }

