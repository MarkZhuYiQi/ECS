    class m_index extends _Main{
        public function __construct(){
            $this->isAdmin=true;
        }
        function index(){
            $this->setViewName("index");
        }
        function getTree_child($pid,$tree,$parentNode){
            $children=array();
            foreach($tree as $r){
                if($r["pid"]==$pid){
                    $child=array("id"=>$r['id'],"text"=>$r['tree_text'],
                                "state"=>$r['tree_state'],
                                "attributes"=>array("url"=>$r["tree_url"]));
                    $children[]=$child;
                }
            }
            return $children;
        }
        function tree(){
